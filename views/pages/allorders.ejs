<head>
    <%- include("../shared/head") %>
</head>
<body>

    <div class="container"></div>

    <p><a class="link-primary" href="/">Home</a></p>
    
    <h1>All Customers</h1>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Product</th>
                <th>Shipping</th>
                <th>Subtotal</th>
                <th>Taxes</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for( let order of orders) { %>
            <tr>
                <td> <%= order.fullname %> <br/>
                    <%= order.email %> <br/>
                    <%= order.phone %> <br/>
                    <%= order.address %> <br/> 
                    <%= order.city %> <br/>
                    <%= order.postalCode %> <br/>
                    <%= order.province %> <br/>
                </td>
                <td>
                    <% if (order.productOneQuantity > 0) { %>
                        Air Force One (Qty: <% order.productOneQuantity %>) @  $<%= (order.productOnePrice) %> = $<%= (order.productOneTotal).toFixed(2) %><br>
                      <% } %>
                      <% if (order.productTwoQuantity > 0) { %>
                        Air Jordan (Qty: <%= order.productTwoQuantity %>) @  $<%= (order.productTwoPrice) %> = $<%= (order.productTwoTotal).toFixed(2) %><br>
                      <% } %>
                      <% if (order.productThreeQuantity > 0) { %>
                        Converse (Qty: <%= order.productThreeQuantity %>) @  $<%= (order.productThreePrice) %> = $<%= (order.productThreeTotal).toFixed(2) %><br>
                      <% } %>
                </td>
                <td>
                    <%= order.shippingCharge %>
                </td>
                <td> <%= order.subtotal %> </td>
                <td>
                    <%= order.taxAmount %>
                </td>
                <td>
                    <%= order.total %>
                </td>
                <td>
                   <a class="btn btn-primary" href="/order/<%= order._id %>" role ="button">View Receipt</a>
                   <a class="btn btn-info" href="/edit/<%= order._id %>" role ="button">Edit Order</a>
                   <a class="btn btn-danger" href="/delete/<%= order._id %>" role ="button">Delete</a>

                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <%- include("../shared/footer") %>
    <%- include("../shared/scripts") %>

 </div>

</body>