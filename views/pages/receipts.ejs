<head>
    <%- include("../shared/head") %>
</head>
<body>
    <div class="container">
<h1>Receipt</h1>

<p><a class="link-primary" href="/">Home</a></p>

        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <td>fullname</td>
                    <td><%= fullname %></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><%= email %></td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td><%= phone %></td>
                </tr>
                <td>Delivery Address</td>
                    <td>
                        <%= address %>,
                        <%= city %>,
                        <%= postalCode %>,
                        <%= province %>
                    </td>
                    <tr>
                        <td>Products</td>
                        <td>
                          <% if (productOneQuantity > 0) { %>
                            Air Force One (Qty: <%= productOneQuantity %>) @  $<%= (productOnePrice) %> = $<%= (productOneTotal).toFixed(2) %><br>
                          <% } %>
                          <% if (productTwoQuantity > 0) { %>
                            Air Jordan (Qty: <%= productTwoQuantity %>) @  $<%= (productTwoPrice) %> = $<%= (productTwoTotal).toFixed(2) %><br>
                          <% } %>
                          <% if (productThreeQuantity > 0) { %>
                            Converse (Qty: <%= productThreeQuantity %>) @  $<%= (productThreePrice) %> = $<%= (productThreeTotal).toFixed(2) %><br>
                          <% } %>
                        </td>
                      </tr>
                <tr>
                    <td>Shipping Charges</td>
                    <td>$<%= shippingCharge.toFixed(2) %></td>
                </tr>
                <tr>
                    <td>Subtotal</td>
                    <td>$<%= subtotal.toFixed(2) %></td>
                </tr>
                <tr>
                    <td>Tax (GST) @ <%= (taxRate) %>%</td>
                    <td>
                      $<%= taxAmount.toFixed(2) %>
                    </td>
                  </tr>
                <tr>
                    <td>Total</td>
                    <td>$<%= total.toFixed(2) %></td>
                </tr>
            </tbody>
        </table>

        <%- include("../shared/footer") %>

    </div>

    <%- include("../shared/scripts") %>
</body>